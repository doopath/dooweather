#:kivy 2.1.0

<Container>:
    rows: 3
    padding: 50
    spacing: 40

    weather_info_label: weather_info
    input_field: input
    switch_temperature_mode_button: switch_temperature_mode_button
    choose_city_button: choose_city

    MDGridLayout:
        rows: 2
        cols: 1
        spacing: 30
        padding: [0, 20]
        size_hint_y: 1

        MDCard:
            radius: dp(20)
            size_hint: 1, None
            padding: [30, 0]
            height: (forecast_label.height + weather_info.height) + 50

            MDBoxLayout:
                id: card_box
                orientation: 'vertical'

                MDLabel:
                    id: forecast_label
                    padding: [20, 20]
                    markup: True
                    text: '[b]Forecast (now)[/b]'
                    font_size: '24sp'
                    size_hint_y: None
                    height: self.texture_size[1]

                MDLabel:
                    id: weather_info
                    font_size: '18sp'
                    text: "You didn't enter the city yet."
                    size_hint_y: None
                    padding: [20, 30]
                    size_hint_y: None
                    height: self.texture_size[1] + 2*self.padding[1]


        AnchorLayout:
            anchor_x: 'right'
            anchor_y: 'top'
            size_hint_y: 1

            MDRoundFlatButton:
                id: switch_temperature_mode_button
                on_release:
                    root.temperature_switch()
                text: 'F/C'
                font_size: '20sp'
                text_color: 'white'
                line_width: 1.5

    MDBoxLayout:
        spacing: 30
        orientation: 'horizontal'

        MDTextField:
            id: input
            hint_text: 'Enter your city'
            text_color_focus: 'white'

        MDRoundFlatButton:
            id: choose_city
            text: 'Choose'
            font_size: '20sp'
            text_color: 'white'
            line_width: 1.5
            on_release:
                root.show_dropdown_menu()

    MDRoundFlatButton:
        size_hint_x: 1
        text: 'Get weather'
        font_size: '20sp'
        text_color: 'white'
        line_width: 1.5
        on_release:
            root.set_weather()