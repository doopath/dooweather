#:kivy 2.0.0

<Container>:
    padding: 50
    rows: 3

    weather_info_label: weather_info
    input_field: input
    switch_temperature_mode_button: switch_temperature_mode_button
    choose_city_button: choose_city
    forecast_label: forecast_label
    forecast_content: forecast_content
    current_forecast_card: current_forecast_card
    scroll_view: scroll_view
    switch_temperature_mode_button_anchor: switch_temperature_mode_button_anchor
    switch_locale_button: switch_locale_button

    ScrollView:
        id: scroll_view
        bar_color: 0, 0, 0, 0
        bar_width: 0
        do_scroll_x: False

        MDStackLayout:
            alignment: 'vertical'
            id: forecast_content
            spacing: 30
            padding: [0, 30]
            size_hint: None, None
            width: root.width - 50 * 2 - 20

            MDCard:
                id: current_forecast_card
                radius: dp(15)
                size_hint: None, None
                padding: [root.window.height / 40, 0]
                height: (forecast_label.height + weather_info.height) + root.window.height / 40
                width: forecast_content.width
                md_bg_color: .15,.15,.15,1

                MDBoxLayout:
                    id: card_box
                    orientation: 'vertical'

                    MDLabel:
                        id: forecast_label
                        padding: [root.height / 40, root.height / 40]
                        markup: True
                        text: f'[b]{root.locale["FORECAST_NOW"]}[/b]'
                        font_size: '24sp'
                        size_hint_y: None
                        height: self.texture_size[1]

                    MDLabel:
                        id: weather_info
                        font_size: '18sp'
                        text: root.locale['ENTERED_NO_CITY']
                        size_hint_y: None
                        padding: [root.height / 40, root.height / 40]
                        line_height: 1.4
                        height: self.texture_size[1] + 2*self.padding[1]


            MDGridLayout:
                id: switch_temperature_mode_button_anchor
                anchor_x: 'right'
                anchor_y: 'top'
                size_hint_y: 1
                cols: 3
                rows: 1
                spacing: 20
                padding: [10, 0]

                MDBoxLayout:
                    size_hint_y: None
                    size_hint_x: 0.8

                MDRoundFlatButton:
                    id: switch_temperature_mode_button
                    on_release:
                        root.temperature_switch()
                    text: 'F/C'
                    font_size: '20sp'
                    text_color: 'white'
                    line_width: 1.5

                MDRoundFlatButton:
                    id: switch_locale_button
                    on_release:
                        root.locale_switch()
                    text: root.locale['LOCALE_BUTTON']
                    font_size: '20sp'
                    text_color: 'white'
                    line_width: 1.5

    MDBoxLayout:
        spacing: 30
        orientation: 'horizontal'
        size_hint: 1, None

        MDTextField:
            id: input
            hint_text: root.locale['ENTER_CITY']
            text_color_focus: 'white'

        MDRoundFlatButton:
            id: choose_city
            text: root.locale['SELECT_BUTTON']
            font_size: '20sp'
            text_color: 'white'
            line_width: 1.5
            on_release:
                root.show_dropdown_menu()

    MDRoundFlatButton:
        size_hint: 1, None
        text: root.locale['GET_WEATHER_BUTTON']
        font_size: '20sp'
        text_color: 'white'
        line_width: 1.5
        on_press:
            root.set_weather()