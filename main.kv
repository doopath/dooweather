#:kivy 2.1.0

<Container>:
    rows: 3
    padding: 50
    spacing: 40

    weather_info_label: weather_info
    input_field: input
    switch_temperature_mode_button: switch_temperature_mode_button
    choose_city_button: choose_city

    MDGridLayout:
        rows: 1
        cols: 2
        alignment: 'horizontal'
        spacing: 20

        MDCard:
            radius: dp(20)
            padding: 40

            MDRelativeLayout:
                MDLabel:
                    anchor_y: 'top'
                    markup: True
                    text: '[b]Forecast (now):[/b]'
                    pos_hint: {'center_x': 0.5, 'center_y': 1}
                    font_size: '24sp'

                MDLabel:
                    id: weather_info
                    font_size: '18sp'
                    pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                    text: "You didn't enter the city yet."


        AnchorLayout:
            size_hint_x: 0.3
            anchor_x: 'right'
            anchor_y: 'center'

            MDRoundFlatButton:
                id: switch_temperature_mode_button
                on_release:
                    root.temperature_switch()
                anchor_y: 'center'
                anchor_x: 'center'
                text: 'F/C'
                font_size: '20sp'
                text_color: 'white'
                line_width: 1.5

    MDBoxLayout:
        spacing: 30
        orientation: 'horizontal'

        MDTextField:
            id: input
            hint_text: 'Enter your city'
            text_color_focus: 'white'

        MDRoundFlatButton:
            id: choose_city
            text: 'Choose'
            font_size: '20sp'
            text_color: 'white'
            line_width: 1.5
            on_release:
                root.show_dropdown_menu()

    MDRoundFlatButton:
        size_hint_x: 1
        text: 'Get weather'
        font_size: '20sp'
        text_color: 'white'
        line_width: 1.5
        on_release:
            root.set_weather()